// HTF Alert Conditions
plot(htfBosFlag ? 1 : 0, title="Alert: HTF BOS", display=display.none)
plot(htfBosLtfBosFlag ? 1 : 0, title="Alert: HTF BOS + LTF BOS Same Direction", display=display.none)
plot(htfSweptFlag ? 1 : 0, title="Alert: HTF Swept", display=display.none)
plot(htfSweptLtfBosFlag ? 1 : 0, title="Alert: HTF Swept + LTF BOS Reversal", display=display.none)

// Pullback Alert Conditions
plot(pullback50Flag ? 1 : 0, title="Alert: 50% Pullback", display=display.none)
plot(pullback25Flag ? 1 : 0, title="Alert: 25% Pullback (Low 50% Mark)", display=display.none)

// LTF Alert Conditions
plot(ltfBosFlag ? 1 : 0, title="Alert: LTF BOS", display=display.none)
plot(ltfSweptFlag ? 1 : 0, title="Alert: LTF Swept", display=display.none)
plot(ltfBosAtExtremeFlag ? 1 : 0, title="Alert: LTF BOS at HTF Extreme", display=display.none)
