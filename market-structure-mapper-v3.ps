    // Create new label positioned to the right with spacing
    currentLowLabel := label.new(bar_index + 10, currentValidLow,
                                  text=timeframe.period + " Low",
                                  style=label.style_label_left,
                                  color=lowColor,
                                  textcolor=color.white,
                                  size=size.small)

